<p id="notice"><%= notice %></p>

<h1>Listing Pizza Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizza_places.each do |pizza_place| %>
      <tr>
        <td><%= pizza_place.name %></td>
        <td><%= pizza_place.address %></td>
        <td><%= pizza_place.city %></td>
        <td><%= pizza_place.state %></td>
        <td><%= pizza_place.zip_code %></td>
        <td><%= link_to 'Show', pizza_place %></td>
        <td><%= link_to 'Edit', edit_pizza_place_path(pizza_place) %></td>
        <td><%= link_to 'Destroy', pizza_place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

